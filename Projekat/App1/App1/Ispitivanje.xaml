        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Odgovor:" VerticalAlignment="Top" Margin="10,170,0,0" Height="20" Width="67" SelectionChanged="textBlock1_SelectionChanged"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="82,170,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="12" Width="268"/>
        <ToggleSwitch x:Name="toggleSwitch" Header="Pokreni mjerenje" HorizontalAlignment="Left" Margin="125,270,0,0" VerticalAlignment="Top" Toggled="toggleSwitch_Toggled" RenderTransformOrigin="0.578,0.583"/>


    </Grid>
</Page>
